<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pet.androidvideo.FragmentDemo.NewsActivity">

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/fg_news_title"
        android:layout_weight="1"
        android:name="com.example.pet.androidvideo.FragmentDemo.TitleFragment"
        />
    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:id="@+id/fg_news_detail"
        android:name="com.example.pet.androidvideo.FragmentDemo.DetailFragment"
        />

</LinearLayout>
